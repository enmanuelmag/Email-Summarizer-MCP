{
  "name": "@cardor/email-summarizer",
  "version": "1.3.0",
  "description": "A Node.js application for summarizing emails using the ModelContextProtocol (MCP).",
  "type": "module",
  "main": "dist/main.js",
  "files": [
    "dist",
    "README.md"
  ],
  "bin": {
    "cardor-email-summarizer": "dist/main.js",
    "cardor-email-summarizer-server": "dist/server.js"
  },
  "scripts": {
    "dev": "tsx ./src/main.ts",
    "serve": "tsx ./src/server.ts",
    "start": "node dist/main.js",
    "build": "tsc && tsc-alias && ts-add-js-extension --dir=dist",
    "docker:build": "docker build -t email-summarizer .",
    "docker:start": "docker compose up",
    "docker:stop": "docker compose down",
    "docker:build-and-start": "npm run build:docker && docker compose up -d",
    "docker:remove": "docker compose down --rmi all --volumes --remove-orphans",
    "docker:remove:img": "docker rmi email-summarizer --force"
  },
  "keywords": [
    "email",
    "summarizer",
    "modelcontextprotocol",
    "mcp",
    "typescript",
    "nodejs"
  ],
  "author": "enmanuelmag@cardor.dev",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.15.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "chalk": "^5.4.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "imapflow": "^1.0.191",
    "luxon": "^3.7.1",
    "node-fetch": "^3.3.2",
    "pdf-ts": "^0.0.2",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@types/luxon": "^3.6.2",
    "ts-add-js-extension": "^1.6.6",
    "typescript": "^5.8.3"
  }
}
